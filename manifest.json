{
  "manifest_version": 3,
  "name": "Batch Download",
  "version": "1.0",
  "description": "Intercept download URLs from tabs and download files automatically.",
  "permissions": ["tabs", "downloads", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": ["<all_urls>"]
}
